# AWS Configuration
AWS_REGION=ap-southeast-2
AWS_PROFILE=default
AWS_ACCOUNT_ID=123456789012

# EKS Cluster Configuration
CLUSTER_NAME=production-eks
ENVIRONMENT=production
KUBERNETES_VERSION=1.28

# Node Groups Configuration
SYSTEM_NODE_INSTANCE_TYPE=t3.medium
SYSTEM_NODE_MIN_SIZE=2
SYSTEM_NODE_MAX_SIZE=4
SYSTEM_NODE_DESIRED_CAPACITY=2

APPLICATION_NODE_INSTANCE_TYPE=t3.large
APPLICATION_NODE_MIN_SIZE=2
APPLICATION_NODE_MAX_SIZE=10
APPLICATION_NODE_DESIRED_CAPACITY=3

SPOT_NODE_INSTANCE_TYPES=t3.large,t3.xlarge,m5.large,m5.xlarge
SPOT_NODE_MIN_SIZE=0
SPOT_NODE_MAX_SIZE=20
SPOT_NODE_DESIRED_CAPACITY=2

# VPC Configuration
VPC_CIDR=10.0.0.0/16
VPC_NAT_GATEWAY=HighlyAvailable

# Security Configuration
CLUSTER_ENDPOINT_PRIVATE_ACCESS=true
CLUSTER_ENDPOINT_PUBLIC_ACCESS=true
CLUSTER_ENDPOINT_PUBLIC_ACCESS_CIDRS=0.0.0.0/0

# Logging Configuration
CLOUDWATCH_LOG_RETENTION_DAYS=30
ENABLE_AUDIT_LOGS=true
ENABLE_API_LOGS=true
ENABLE_AUTHENTICATOR_LOGS=true
ENABLE_CONTROLLER_MANAGER_LOGS=true
ENABLE_SCHEDULER_LOGS=true

# Add-ons Configuration
INSTALL_AWS_LOAD_BALANCER_CONTROLLER=true
INSTALL_CLUSTER_AUTOSCALER=true
INSTALL_EXTERNAL_DNS=true
INSTALL_CERT_MANAGER=true
INSTALL_MONITORING=true
INSTALL_INGRESS_NGINX=true

# Monitoring Configuration
PROMETHEUS_RETENTION_DAYS=30
PROMETHEUS_STORAGE_SIZE=50Gi
GRAFANA_STORAGE_SIZE=10Gi

# Tags
TAG_ENVIRONMENT=production
TAG_TEAM=platform
TAG_PROJECT=eks-cloudformation
TAG_MANAGED_BY=eksctl

